{
  "eslint.options": {"configFile": ".eslintrc.json"},
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": false,
  "explorer.previewAction.onHover": false,
  "explorer.openAction.for.directory": "none",
  "explorer.keyMappings": {
    "<cr>": ["expanded?", "collapse", "expand", "open"],
    "-": "open:split",
    "v": "open:vsplit"
  },
  "languageserver": {
    "golang": {
      "command": "gopls",
      "filetypes": ["go"],
      "initializationOptions": {
        "gocodeCompletionEnabled": true,
        "diagnosticsEnabled": true,
        "lintTool": "golint"
      }
    }
  },
}
